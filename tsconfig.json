{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution": "node",

    "inlineSourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,

    "paths": {
      "app/*": ["*"],
      "commands/*": ["commands/*"],
      "events/*": ["events/*"],
      "handlers/*": ["handlers/*"],
      "models/*": ["models/*"]
    }
  },

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },

  "exclude": ["node_modules", "dist"]
}